<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimary</item>
    <item name="android:colorBackground">@color/colorPrimary</item>
  </style>

  <style name="AppTheme.TranslucentedStatusBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="colorPrimaryDark">@color/colorBlack</item>
    <item name="android:windowTranslucentStatus">true</item>
    <item name="android:homeAsUpIndicator">@drawable/ic_arrow_backspace</item>
    <item name="colorAccent">@color/colorBlueLight</item>
  </style>

  <style name="TextInputLayoutStyle">
    <item name="android:textColorHint">@color/colorGrayHintLable</item>
    <item name="colorAccent">@color/colorGrayHintLable</item>
  </style>

  <style name="EditTextStyle">
    <item name="android:paddingBottom">8dp</item>
    <item name="android:paddingTop">5dp</item>
    <item name="android:background">@drawable/underline</item>
    <item name="android:textSize">19sp</item>
    <item name="android:textColor">@color/colorBlackText</item>
  </style>

  <style name="AppTheme.LinkText">
    <item name="colorAccent">@color/colorBlueLight</item>
  </style>

  <style name="AppTheme.CropActivityTheme">
    <item name="colorPrimary">@color/colorDarkToolBar</item>
    <item name="colorPrimaryDark">@color/colorDarkStatusBar</item>
    <item name="colorAccent">@color/colorBlueLight</item>
  </style>

  <style name="FilterRowStyle">
    <item name="android:ellipsize">end</item>
    <item name="android:singleLine">true</item>
    <item name="android:textSize">@dimen/size_text_18sp</item>
    <item name="android:textStyle">normal</item>
  </style>

  <style name="FilterRowValueStyle" parent="FilterRowStyle">
    <item name="android:layout_marginStart">160dp</item>
    <item name="android:layout_marginEnd">40dp</item>
    <item name="android:layout_marginTop">16dp</item>
    <item name="android:layout_marginBottom">18dp</item>
    <item name="android:textColor">@color/colorBlackTextTranspGray</item>
    <item name="android:layout_gravity">end</item>
  </style>

  <style name="FilterRowNameStyle" parent="FilterRowValueStyle">
    <item name="android:layout_marginEnd">160dp</item>
    <item name="android:layout_marginStart">44dp</item>
    <item name="android:layout_gravity">start</item>
    <item name="android:textColor">@color/colorBlackText</item>
  </style>

  <style name="FilterIconStyle">
    <item name="android:layout_gravity">end</item>
  </style>

  <style name="FilterIconArrowStyle" parent="FilterIconStyle">
    <item name="android:layout_marginTop">20dp</item>
    <item name="android:layout_marginBottom">16dp</item>
    <item name="android:layout_marginEnd">16dp</item>
    <item name="android:layout_marginStart">16dp</item>
  </style>

  <style name="FilterIconCancelStyle" parent="FilterIconStyle">
    <item name="android:layout_marginTop">8dp</item>
    <item name="android:padding">16dp</item>
  </style>

  <style name="SettingsTextStyle">
    <item name="android:paddingBottom">16dp</item>
    <item name="android:paddingTop">16dp</item>
    <item name="android:paddingStart">24dp</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textSize">@dimen/size_text_18sp</item>
    <item name="android:textStyle">normal</item>
    <item name="android:background">@android:color/background_light</item>
  </style>

  <style name="SettingsTextBlueStyle" parent="SettingsTextStyle">
    <item name="android:textColor">@color/colorBlueDarkOne</item>
  </style>

  <style name="SettingsTextBlackStyle" parent="SettingsTextStyle">
    <item name="android:textColor">@color/colorBlackText</item>
  </style>

  <style name="SettingsTextRedStyle" parent="SettingsTextStyle">
    <item name="android:textColor">@color/colorRedDislike</item>
  </style>
</resources>
