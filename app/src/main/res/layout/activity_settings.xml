<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_dark"
              android:orientation="vertical">


  <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_statusbar_hight">

    <TextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:fontFamily="sans-serif"
      android:text="@string/text_settings"
      android:textColor="@android:color/background_light"
      android:textSize="@dimen/size_text_18sp"/>
  </android.support.v7.widget.Toolbar>

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light">

    <TextView
      style="@style/SettingsTextBlackStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/text_message_to_email"
      />

    <Switch
      android:id="@+id/switcher"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end"
      android:layout_marginBottom="13dp"
      android:layout_marginEnd="20dp"
      android:layout_marginTop="14dp"
      android:checked="false"
      android:clickable="true"
      android:thumb="@drawable/selector_thumb"
      android:track="@drawable/selector_track"/>
  </FrameLayout>

  <com.balysv.materialripple.MaterialRippleLayout
    android:id="@+id/ripple"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mrl_rippleAlpha="0.1"
    app:mrl_rippleColor="@android:color/black"
    app:mrl_rippleOverlay="true">

    <TextView
      android:id="@+id/edit"
      style="@style/SettingsTextBlueStyle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/text_edit_user_data"/>

  </com.balysv.materialripple.MaterialRippleLayout>

  <TextView
    android:id="@+id/change_password"
    style="@style/SettingsTextBlueStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/text_change_password"/>

  <View
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:background="@color/colorGrayLight"/>

  <TextView
    android:id="@+id/contact_us"
    style="@style/SettingsTextBlueStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/text_contact_us"/>

  <TextView
    android:id="@+id/about"
    style="@style/SettingsTextBlueStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/text_about"/>

  <View
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:background="@color/colorGrayLight"/>

  <TextView
    android:id="@+id/logout"
    style="@style/SettingsTextRedStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/text_log_out"/>

  <View
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="@color/colorGrayLight"/>

</LinearLayout>