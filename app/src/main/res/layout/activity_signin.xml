<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/layout"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/background_gradient"
             tools:context=".activities.auth.signin.SignInActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:orientation="vertical">

    <ImageView
      android:id="@+id/image"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="48dp"
      android:background="@drawable/logo"/>

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_signin_form"
        android:orientation="vertical">

        <EditText
          android:layout_width="match_parent"
          android:layout_height="30dp"/>

        <EditText
          android:layout_width="match_parent"
          android:layout_height="30dp"/>
      </LinearLayout>

      <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </FrameLayout>


    <EditText
      android:id="@+id/email"
      android:layout_width="match_parent"
      android:layout_height="@dimen/height_sign_in_edt"
      android:layout_gravity="center"
      android:layout_marginTop="@dimen/margin_sign_in_vertical_small"
      android:background="@drawable/edittext_bg"
      android:hint="@string/text_email"
      android:paddingLeft="@dimen/padding_text"
      android:textSize="@dimen/size_sign_in_text_14sp"/>

    <EditText
      android:id="@+id/password"
      android:layout_width="match_parent"
      android:layout_height="@dimen/height_sign_in_edt"
      android:layout_gravity="center"
      android:layout_marginTop="@dimen/margin_sign_in_vertical_small"
      android:background="@drawable/edittext_bg"
      android:hint="@string/text_password"
      android:paddingLeft="@dimen/padding_text"
      android:textSize="@dimen/size_sign_in_text_14sp"/>

    <Button
      android:id="@+id/signin"
      android:layout_width="match_parent"
      android:layout_height="@dimen/height_sign_in_btn"
      android:layout_gravity="center"
      android:layout_marginTop="@dimen/margin_sign_in_vertical_medium"
      android:background="@drawable/selector_signin"
      android:enabled="false"
      android:text="@string/text_sign_in"
      android:textColor="@android:color/background_light"/>

    <TextView
      android:id="@+id/forgotPassword"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="@dimen/margin_sign_in_vertical_small"
      android:text="@string/text_forgot_password"
      android:textColor="@color/colorPrimary"/>

    <Button
      android:id="@+id/signup"
      android:layout_width="match_parent"
      android:layout_height="@dimen/height_sign_in_btn"
      android:layout_marginTop="@dimen/margin_sign_in_vertical_medium"
      android:background="@drawable/btn_signup_bg"
      android:text="@string/text_sign_up"
      android:textColor="@android:color/background_light"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|start"
    android:orientation="vertical">

    <ImageView
      android:id="@+id/img_news"
      android:layout_width="@dimen/height_sign_in_footer_circle"
      android:layout_height="@dimen/height_sign_in_footer_circle"
      android:layout_gravity="center"
      android:background="@drawable/circle_bg"/>

    <TextView
      android:id="@+id/txt_news"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="@dimen/margin_sign_in_vertical_small"
      android:text="@string/text_news"
      android:textColor="@color/colorPrimary"
      android:textStyle="bold"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center"
    android:orientation="vertical">

    <ImageView
      android:id="@+id/img_analytics"
      android:layout_width="@dimen/height_sign_in_footer_circle"
      android:layout_height="@dimen/height_sign_in_footer_circle"
      android:layout_gravity="center"
      android:background="@drawable/circle_bg"/>

    <TextView
      android:id="@+id/txt_analytics"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="@dimen/margin_sign_in_vertical_small"
      android:text="@string/text_analytics"
      android:textColor="@color/colorPrimary"
      android:textStyle="bold"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    android:orientation="vertical">

    <ImageView
      android:id="@+id/img_judges"
      android:layout_width="@dimen/height_sign_in_footer_circle"
      android:layout_height="@dimen/height_sign_in_footer_circle"
      android:layout_gravity="center"
      android:background="@drawable/circle_bg"/>

    <TextView
      android:id="@+id/txt_judges"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="@dimen/margin_sign_in_vertical_small"
      android:text="@string/text_judges"
      android:textColor="@color/colorPrimary"
      android:textStyle="bold"/>
  </LinearLayout>

</FrameLayout>
