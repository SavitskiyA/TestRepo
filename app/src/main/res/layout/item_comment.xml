<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresce="http://schemas.android.com/tools"
                android:id="@+id/frame_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

  <com.facebook.drawee.view.SimpleDraweeView
    android:id="@+id/photo"
    android:layout_width="64dp"
    android:layout_height="64dp"
    android:layout_marginStart="24dp"
    android:layout_marginTop="24dp"
    android:background="@drawable/gradient_judge_four"
    fresce:roundAsCircle="true"/>

  <TextView
    android:id="@+id/abbr"
    android:layout_width="64dp"
    android:layout_height="64dp"
    android:layout_marginStart="24dp"
    android:layout_marginTop="24dp"
    android:gravity="center"
    android:text="AD"
    android:textAllCaps="true"
    android:textColor="@android:color/background_light"
    android:textSize="@dimen/size_bottom_text_20sp"/>

  <TextView
    android:id="@+id/lawyer_fullname"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="100dp"
    android:layout_marginStart="100dp"
    android:layout_marginTop="24dp"
    android:fontFamily="sans-serif-medium"
    android:letterSpacing="0.03"
    android:maxLines="2"
    android:text="Петро Кіт Петро Кіт Петро Кіт Петро Кіт Петро Кіт //    mDisposable.clear();"
    android:textColor="@color/colorBlackText"
    android:textSize="@dimen/size_text_16sp"
    android:textStyle="normal"/>

  <TextView
    android:id="@+id/date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="25dp"
    android:fontFamily="sans-serif"
    android:text="24 бер 2014"
    android:textColor="@color/colorBlackTextTranspGray"
    android:textSize="12sp"
    android:textStyle="normal"
    />

  <TextView
    android:id="@+id/body"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/lawyer_fullname"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="100dp"
    android:layout_marginTop="6dp"
    android:fontFamily="sans-serif"
    android:letterSpacing="0.03"
    android:text="Чудовий хлопчина, невимовно радий знайомству і можливості працювати разом."
    android:textColor="@color/colorBlackTextTranspGray"
    android:textStyle="normal"/>

</RelativeLayout>