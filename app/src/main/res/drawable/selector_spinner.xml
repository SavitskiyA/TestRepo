<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item>
    <layer-list>
      <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:padding="@dimen/padding_text" android:shape="rectangle">
          <solid android:color="@android:color/transparent"/>
          <corners
            android:radius="@dimen/radius_sign_in_edt_corners"/>
          <stroke
            android:width="@dimen/radius_sign_in_edt_corners"
            android:color="@android:color/darker_gray"/>
        </shape>
      </item>

      <item android:right="@dimen/padding_text">
        <bitmap android:gravity="right" android:src="@drawable/ic_arrow"/>
      </item>
    </layer-list>
  </item>
</selector>
