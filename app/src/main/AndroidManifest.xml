      android:theme="@style/AppTheme.TranslucentedStatusBar"/>
    <activity
      android:name=".activities.news.NewsActivity"
      android:launchMode="singleTop"
      android:screenOrientation="portrait"
      android:theme="@style/AppTheme.TranslucentedStatusBar"/>
    <activity
      android:name=".activities.auth.signup.judge.JudgeSignUpActivity"
      android:launchMode="singleTop"
      android:screenOrientation="portrait"
