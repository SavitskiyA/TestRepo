<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">

  <TextView
    android:id="@+id/mark_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginTop="20dp"
    android:fontFamily="sans-serif"
    android:text="Правове обгрунтування"
    android:textColor="@color/colorBlackText"
    android:textSize="@dimen/size_text_18sp"
    android:textStyle="normal"/>

  <TextView
    android:layout_below="@+id/mark_name"
    android:id="@+id/mark_value"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:layout_marginTop="4dp"
    android:fontFamily="sans-serif"
    android:text="8.6"
    android:textColor="@color/colorBlackText"
    android:textSize="@dimen/size_center_text_30sp"
    android:textStyle="normal"/>

  <TextView
    android:layout_toEndOf="@+id/mark_value"
    android:id="@+id/mark_denominator"
    android:layout_below="@+id/mark_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="16dp"
    android:fontFamily="sans-serif"
    android:text="/10"
    android:textColor="@color/colorGrayHintLable"
    android:textSize="18sp"
    android:textStyle="normal"/>

  <ImageView
    android:layout_width="match_parent"
    android:layout_below="@id/mark_value"
    android:layout_height="1dp"
    android:layout_marginStart="24dp"
    android:layout_marginTop="20dp"
    android:background="@color/colorGrayJudgesSeparatorUnderline"/>

</RelativeLayout>
