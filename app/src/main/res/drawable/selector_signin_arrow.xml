<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_enabled="false">
    <layer-list>
      <item>
        <shape
          android:shape="oval">
          <solid android:color="@color/colorBlueLightTransp"/>
          <size
            android:width="64dp"
            android:height="64dp"/>
        </shape>
      </item>
      <item
        android:width="24dp"
        android:height="24dp"
        android:drawable="@drawable/ic_arrow"
        android:left="20dp"
        android:right="20dp"
        android:top="20dp"/>
    </layer-list>
  </item>
  <item android:state_enabled="true">

    <layer-list>
      <item>
        <shape
          android:shape="oval">
          <solid android:color="@color/colorBlueLight"/>
          <size
            android:width="64dp"
            android:height="64dp"/>
        </shape>
      </item>
      <item
        android:width="24dp"
        android:height="24dp"
        android:drawable="@drawable/ic_arrow"
        android:left="20dp"
        android:right="20dp"
        android:top="20dp"/>
    </layer-list>
  </item>
</selector>