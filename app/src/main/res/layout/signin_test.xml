<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/background_gradient">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
      android:id="@+id/image"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="48dp"
      android:background="@drawable/logo"/>

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="12dp"
      android:layout_marginRight="12dp"
      android:layout_marginTop="24dp"
      android:background="@android:color/transparent">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@drawable/background_signin_form"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="54dp"
          android:layout_marginLeft="24dp"
          android:layout_marginRight="24dp"
          android:layout_marginTop="22dp">

          <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="EMAIL"
            android:letterSpacing="2.73"
            android:textSize="19sp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="54dp"
          android:layout_marginBottom="40dp"
          android:layout_marginLeft="24dp"
          android:layout_marginRight="24dp"
          android:layout_marginTop="20dp">

          <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PASSWORD"
            android:letterSpacing="2.73"
            android:textSize="19sp"/>
        </android.support.design.widget.TextInputLayout>
      </LinearLayout>

      <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/circle_bg">

        <Button
          style="?android:borderlessButtonStyle"
          android:layout_width="64dp"
          android:layout_height="64dp"
          android:background="@drawable/selector_signin_arrow"
          android:enabled="false"/>
      </FrameLayout>
    </FrameLayout>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="16dp"
      android:alpha="0.5"
      android:text="@string/text_forgot_password"
      android:textColor="@android:color/background_light"
      android:textSize="16sp"/>


  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical">


    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal|bottom"
          android:layout_marginBottom="24dp"
          android:background="@drawable/ic_judges"/>

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal|bottom"
          android:layout_marginTop="12dp"
          android:layout_weight="1"
          android:text="@string/text_judges"
          android:textAllCaps="false"
          android:textColor="@android:color/background_light"/>

      </FrameLayout>

      <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
          android:layout_width="2dp"
          android:layout_height="54dp"
          android:background="@color/colorWhiteTrans"/>
      </FrameLayout>


      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal|bottom"
          android:layout_marginBottom="24dp"
          android:background="@drawable/ic_analytics"/>

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal|bottom"
          android:layout_marginTop="12dp"
          android:text="@string/text_analytics"
          android:textAllCaps="false"
          android:textColor="@android:color/background_light"/>

      </FrameLayout>

      <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
          android:layout_width="2dp"
          android:layout_height="54dp"
          android:background="@color/colorWhiteTrans"/>
      </FrameLayout>

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal|bottom"
          android:layout_marginBottom="24dp"
          android:background="@drawable/ic_news"/>

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal|bottom"
          android:layout_marginTop="12dp"
          android:text="@string/text_news"
          android:textAllCaps="false"
          android:textColor="@android:color/background_light"/>
      </FrameLayout>
    </LinearLayout>

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|center_horizontal"
      android:layout_marginTop="20dp"
      android:background="@android:color/background_light">

      <Button
        android:id="@+id/button2"
        style="?android:borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/selector_signin"
        android:enabled="false"
        android:letterSpacing="2"
        android:text="@string/text_sign_up"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"/>
    </FrameLayout>
  </LinearLayout>


</FrameLayout>