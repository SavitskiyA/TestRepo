<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:fresce="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_jp_b"
    android:orientation="vertical">

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="374dp">

      <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/photo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="86dp"
        android:background="@drawable/gradient_judge_four"
        android:elevation="27dp"
        fresce:roundAsCircle="true"/>

      <TextView
        android:id="@+id/first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="250dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:lineSpacingMultiplier="1.17"
        android:text="Андрій"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"/>

      <TextView
        android:id="@+id/last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="278dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:lineSpacingMultiplier="1.17"
        android:text="Храмов"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"/>

      <TextView
        android:id="@+id/company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="318dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:lineSpacingMultiplier="1.17"
        android:text="Юридична фірма «Elite Studio»"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"/>

      <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_arrow_backspace"/>

      <TextView
        android:id="@+id/abbr"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="86dp"
        android:elevation="27dp"
        android:gravity="center"
        android:text="AX"
        android:textColor="@android:color/background_light"
        android:textSize="48sp"/>
    </FrameLayout>


    <android.support.v7.widget.RecyclerView
      android:id="@+id/comments_recycler_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@android:color/background_light"/>
  </LinearLayout>
</ScrollView>