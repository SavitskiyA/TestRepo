<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimary</item>
    <item name="android:colorBackground">@color/colorPrimary</item>
  </style>

  <style name="AppTheme.TranslucentedStatusBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="colorPrimaryDark">@color/colorBlack</item>
    <item name="android:windowTranslucentStatus">true</item>
    <item name="android:homeAsUpIndicator">@drawable/ic_arrow_backspace</item>
  </style>

  <style name="TextInputLayoutStyle">
    <item name="android:textColorHint">@color/colorGrayHintLable</item>
    <item name="colorAccent">@color/colorGrayHintLable</item>
  </style>

  <style name="EditTextStyle">
    <item name="android:paddingBottom">8dp</item>
    <item name="android:paddingTop">5dp</item>
    <item name="android:background">@drawable/underline</item>
    <item name="android:textSize">19sp</item>
    <item name="android:textColor">@color/colorBlackText</item>
  </style>

  <style name="AppTheme.LinkText">
    <item name="colorAccent">@color/colorBlueLight</item>
  </style>
</resources>
