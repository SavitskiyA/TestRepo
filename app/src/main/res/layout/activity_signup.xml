<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_dark"
              android:orientation="vertical">

  <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_statusbar_hight">

    <TextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:fontFamily="sans-serif"
      android:text="@string/text_sign_up_choose_role"
      android:textColor="@android:color/background_light"
      android:textSize="18sp"/>
  </android.support.v7.widget.Toolbar>

  <com.balysv.materialripple.MaterialRippleLayout
    android:id="@+id/ripple"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    app:mrl_rippleAlpha="0.1"
    app:mrl_rippleColor="@android:color/black"
    app:mrl_rippleOverlay="true">

    <FrameLayout
      android:id="@+id/judge"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:background="@drawable/img_judge"/>

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="@dimen/margin_sign_up_vertical"
          android:fontFamily="sans-serif-medium"
          android:letterSpacing="0.05"
          android:text="@string/text_i_am_judge"
          android:textColor="@android:color/background_light"
          android:textSize="18sp"/>
      </LinearLayout>

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/margin_sign_up_horizontal"
        android:background="@drawable/ic_right_arrow"/>
    </FrameLayout>
  </com.balysv.materialripple.MaterialRippleLayout>

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginLeft="@dimen/margin_sign_up_horizontal"
    android:layout_marginRight="@dimen/margin_sign_up_horizontal"
    android:alpha="0.1"
    android:background="@android:color/background_light"/>

  <com.balysv.materialripple.MaterialRippleLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    app:mrl_rippleAlpha="0.1"
    app:mrl_rippleColor="@android:color/black"
    app:mrl_rippleOverlay="true">

    <FrameLayout
      android:id="@+id/lawyer"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:background="@drawable/img_lawyer"/>

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="@dimen/margin_sign_up_vertical"
          android:fontFamily="sans-serif-medium"
          android:letterSpacing="0.05"
          android:text="@string/text_i_am_lawyer"
          android:textColor="@android:color/background_light"
          android:textSize="18sp"/>
      </LinearLayout>

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/margin_sign_up_horizontal"
        android:background="@drawable/ic_right_arrow"/>
    </FrameLayout>
  </com.balysv.materialripple.MaterialRippleLayout>

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginLeft="@dimen/margin_sign_up_horizontal"
    android:layout_marginRight="@dimen/margin_sign_up_horizontal"
    android:alpha="0.1"
    android:background="@android:color/background_light"/>

  <com.balysv.materialripple.MaterialRippleLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    app:mrl_rippleAlpha="0.1"
    app:mrl_rippleColor="@android:color/black"
    app:mrl_rippleOverlay="true">

    <FrameLayout
      android:id="@+id/citizen"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:background="@drawable/img_citizen"/>

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="@dimen/margin_sign_up_vertical"
          android:fontFamily="sans-serif-medium"
          android:letterSpacing="0.05"
          android:text="@string/text_i_am_citizen"
          android:textColor="@android:color/background_light"
          android:textSize="18sp"/>
      </LinearLayout>

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/margin_sign_up_horizontal"
        android:background="@drawable/ic_right_arrow"/>
    </FrameLayout>
  </com.balysv.materialripple.MaterialRippleLayout>
</LinearLayout>
